<div class="col-12">
    <h2>Comments</h2>
    <div class="comments">
        {% if comments %}
            <ul class="list-group">
                {% for comment in comments %}
                    <li class="list-group-item d-flex justify-content-between">
                        <div>{{ comment.comment }}</div>
                        <div>Added by: {{ comment.email }}</div>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="alert alert-warning" role="alert">
                No comments yet.
            </div>
        {% endif %}
    </div>
    {{ form(commentForm) }}
</div>